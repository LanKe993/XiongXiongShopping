package com.taotao.controller;

/** 
* @author 作者 Your-Name: 
* @version 创建时间：2019年10月22日 下午2:18:42 
* 类说明 
*/

public class Outer implements InnerTest{

	// 定义一个实例变量和静态变量
	private int a;
	private static int b;
	
	// 定义一个静态方法和非静态方法
	public static void say(){
		
	}
	
	public void test() {
		// 在外部类中调用内部类的属性和方法
		Outer.Inner.c = 1;// 可以通过静态内部类的全类名来调用静态内部类的静态属性或方法
		Outer.Inner.go();
		
		Inner inner = new Inner();
		inner.d = 1;
		inner.walk();//访问静态内部类的非静态方法或变量
		
	}
	
	// 内部类
	public static class Inner implements InnerTest{
		// 在静态内部类中定义一个静态变量和一个实例变量
		static int c;
		int d;
		// 定义一个匿名代码块和一个静态代码块
		static{
			
		}
		
		// 定义一个静态方法和普通方法
		public static void go(){
			
		}
		
		public void walk(){
			// 在静态内部类中调用外部类的属性和方法
			int f = b;// 可以直接调用外部类的静态属性
			say();// 可以直接调用外部类的静态方法
			//int e = a;// 不可以直接调用外部类的非静态变量
			//test();// 不可以直接调用外部类的非静态方法
			Outer outer = new Outer();
			int e = outer.a;// 静态内部类调用外部类的方法就是首先创建外部类的实例，然后outer.a来调用外部类的非静态变量或者是非静态方法
			outer.test();
		}
	}
}
